  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "types",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "target": "ES2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "stripInternal": true,
  },
}